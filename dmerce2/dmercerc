#!/bin/ksh

# Software versions
APACHE13_VERSION=1.3.27
DMERCE_VERSION=2.5.0
JAVA_VERSION=1.4.1_01
MYSQL_VERSION=3.23.56
ORACLE_VERSION=8.1.7
PGSQL_VERSION=7.3.2
PHP_VERSION=4.3.1
PYTHON1_VERSION=1.5.2
PYTHON2_VERSION=2.2.2
PYTHON_EGENIX_MXDATETIME_VERSION=2.0.4
PYTHON_MYSQL_VERSION=0.9.2
PYTHON_PSYCOPG_VERSION=1.1.3
COURIER_IMAP_VERSION=1.7.1
EXIM_VERSION=4.14

# Start/stop
DMERCE_ST=YES
APACHE1312_ST=YES
APACHE13_ST=YES
DMERCE_ST=YES
MYSQL_ST=YES
PGSQL_ST=YES
ORACLE_ST=NO
COURIER_IMAP_ST=YES
EXIM_ST=YES

# dmerce
###DMERCE_HOME=/opt/dmerce
DMERCE_HOME=$HOME/dmerce2
DMERCE_BIN=$DMERCE_HOME/bin
DMERCE_BUILD=$DMERCE_HOME/build
DMERCE_DOC=$DMERCE_HOME/doc
DMERCE_EXAMPLES=$DMERCE_HOME/examples
DMERCE_INSTALL=$DMERCE_HOME/install
DMERCE_JAR=$DMERCE_HOME/jar
DMERCE_LANG=german
DMERCE_LIB=$DMERCE_HOME/lib
DMERCE_LOG=$DMERCE_HOME/log
DMERCE_PRODUCT=$DMERCE_HOME/product
DMERCE_SCRATCH=$DMERCE_HOME/scratch
DMERCE_SQL=$DMERCE_HOME/sql
DMERCE_SQL_MYSQL=$DMERCE_HOME/sql/mysql/dmerce
DMERCE_SQL_ORACLE=$DMERCE_HOME/sql/oracle/dmerce
DMERCE_SQL_POSTGRESQL=$DMERCE_HOME/sql/postgresql/dmerce
DMERCE_WEBSITES=$DMERCE_HOME/websites

# Python
PYTHON1_HOME=$DMERCE_PRODUCT/python/$PYTHON1_VERSION
PYTHON2_HOME=$DMERCE_PRODUCT/python/$PYTHON2_VERSION
#PYTHON2_NT_HOME=$DMERCE_PRODUCT/python/$PYTHON2_VERSION-nt
PYTHON2_NT_HOME=$DMERCE_PRODUCT/python/$PYTHON2_VERSION

# Apache
APACHE13_HOME=$DMERCE_PRODUCT/apache/$APACHE13_VERSION
APACHE1312_HOME=$DMERCE_PRODUCT/apache/1.3.12
APACHE13_MODPYTHON_VERSION=2.7.8
PHP_HOME=$DMERCE_PRODUCT/php/$PHP_VERSION
PHPRC=$PHP_HOME/lib/php

# MySQL
MYSQL_HOME=$DMERCE_PRODUCT/mysql/$MYSQL_VERSION
MYSQL_ROOTPWD=
MYSQL_USER=dmerce
MYSQL_JDBC=mysql-connector-java-2.0.14-bin.jar

# PostgreSQL
PGSQL_HOME=$DMERCE_PRODUCT/postgresql/$PGSQL_VERSION
PGDATA=$PGSQL_HOME/data
PGSQL_USER=dmerce
PGSQL_JDBC=pgsql73jdbc2.jar

# ORACLE
ORACLE_BASE=$DMERCE_PRODUCT/oracle
ORACLE_HOME=$ORACLE_BASE/product/$ORACLE_VERSION
ORACLE_LIB=$ORACLE_HOME/lib
ORACLE_SID=dmerce
NLS_LANG=american_america.WE8ISO8859P15

# Java
JAVA_HOME=$DMERCE_PRODUCT/j2sdk$JAVA_VERSION
CLASSPATH=$DMERCE_JAR/dmerce-$DMERCE_VERSION.jar:$DMERCE_JAR/$MYSQL_JDBC

# Courier
COURIER_IMAP_HOME=$DMERCE_PRODUCT/courier/$COURIER_IMAP_VERSION

# Exim
EXIM_HOME=$DMERCE_PRODUCT/exim/$EXIM_VERSION
EXIM_QUEUE_TIME="1m"

add_to_ld() {
    if [ -d $1 ]; then
	if [ -n "$LD_LIBRARY_PATH" ]; then
	    case "$LD_LIBRARY_PATH" in
		*$1*)
		    ;;
		*)
		    LD_LIBRARY_PATH=$1:$LD_LIBRARY_PATH
		    ;;
	    esac
	else
	    LD_LIBRARY_PATH=$1
	fi
    fi
}

# Paths
LD_LIBRARY_PATH=$LD_LIBRARY_PATH
add_to_ld /usr/local/lib
add_to_ld $MYSQL_HOME/lib/mysql
add_to_ld $PGSQL_HOME/lib
add_to_ld $ORACLE_LIB
export LD_LIBRARY_PATH

# dmerce 2.4
qd_set24_env() {
    PYTHONPATH=$DMERCE_PRODUCT/dmerce/2.4.0:$DMERCE_PRODUCT/dmerce/2.4.0/DTL:$DMERCE_PRODUCT/dmerce/2.4.0/DMS
    PATH=$JAVA_HOME/bin:$PYTHON1_HOME/bin:$DMERCE_HOME/bin:$MYSQL_HOME/bin:$PGSQL_HOME/bin:$ORACLE_HOME/bin:$PATH
    qd_export_env
}

# dmerce 2.5
qd_set25_env() {
    PYTHONPATH=$DMERCE_PRODUCT/dmerce/2.5.0:$DMERCE_PRODUCT/dmerce/2.5.0/DTL:$DMERCE_PRODUCT/dmerce/2.5.0/DMS
    PATH=$JAVA_HOME/bin:$PYTHON2_NT_HOME/bin:$DMERCE_HOME/bin:$MYSQL_HOME/bin:$PGSQL_HOME/bin:$ORACLE_HOME/bin:$PATH
    qd_export_env
}

# Export environment
qd_export_env() {
    # dmerce
    export DMERCE_HOME
    export DMERCE_BIN
    export DMERCE_BUILD
    export DMERCE_DOC
    export DMERCE_EXAMPLES
    export DMERCE_INSTALL
    export DMERCE_JAR
    export DMERCE_LANG
    export DMERCE_LIB
    export DMERCE_LOG
    export DMERCE_PRODUCT
    export DMERCE_SCRATCH
    export DMERCE_SQL
    export DMERCE_SQL_MYSQL
    export DMERCE_SQL_ORACLE
    export DMERCE_SQL_POSTGRESQL
    export DMERCE_WEBSITES

    # Python
    export PYTHON2_HOME
    export PYTHON2_NT_HOME
    export PYTHONPATH

    # Java
    export JAVA_HOME
    export CLASSPATH

    # Apache
    export APACHE13_HOME
    export APACHE13_MODPYTHON_VERSION
    export PHP_HOME
    export PHPRC

    # MySQL
    export MYSQL_HOME
    export MYSQL_ROOTPWD

    # PostgreSQL
    export PGSQL_HOME
    export PGDATA

    # ORACLE
    export ORACLE_BASE
    export ORACLE_HOME
    export ORACLE_LIB
    export ORACLE_SID
    export NLS_LANG

    # Paths
    export LD_LIBRARY_PATH
    export PATH
}
